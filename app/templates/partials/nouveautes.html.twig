<h3 class='text-center mt-5'>
	<strong>
		<i class="bi bi-lightning-fill"></i>
		Nouveautés</strong>
</h3>

{% for livre in nouveautes %}
	<div class="card mb-3 border-0 border-bottom">
		<div class="row g-0 align-items-center">
			<div class="col-md-3 p-2">
				<img src="{{ asset('images/livres/zooms/' ~ livre.photo) }}" class="img-fluid rounded-start" alt="{{ livre.titre }}">
			</div>
			<div class="col-md-9">
				<div class="card-body">
					<h5 class="card-title mb-1"><i class="bi bi-arrow-left-circle"></i> {{ livre.titre }}</h5>
					<p class="card-text mb-1 text-muted">{{ livre.auteur }}</p>
					<a href="{{ path('app_detail_livre', { 'id': livre.id }) }}" class="btn btn-primary btn-sm" role="button">
						<p class="m-0">Prix ({{ livre.prix }}€)</p>
					</a>
				</div>
			</div>
		</div>
	</div>
{% endfor %}
